<div class="container">
    <div class="jumbotron">
        <h1>Financiable</h1>
    </div>
    <div class="row">

        <div class="col-lg-12">

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title"><strong>Let's set up your profile!</strong></h3>


                </div>
                <div class="panel-body">
                    <form action="/{{this.id}}/add" method="POST" role="form">
                        <div class="form-group">
                            <br>

                            <div class="panel-title">
                                <h3 class="panel-title"><strong>SUMMARY</strong></h3>
                                <br>
                        </div>



                            <div class="form-group">
                                <label for="">Month</label>
                                <input type="text" class="form-control"  name="month" placeholder="">
                            </div>

                            <br>
                            <form class="panel-title">
                                <h3 class="panel-title"><strong>EXPENSES</strong></h3>
                                <br>

                                <div class="form-group">
                                    <label for="">Mortgage</label>
                                    <input type="text" class="form-control"  name="mortgage" placeholder="">
                                </div>
                        <div class="form-group">
                            <label for="">Utilities</label>
                            <input type="text" class="form-control"  name="utilities" placeholder="">
                        </div>
                        <div class="form-group">
                            <label for="">Gas</label>
                            <input type="text" class="form-control"  name="gas" placeholder="">
                        </div>
                        <div class="form-group">
                            <label for="">Groceries</label>
                            <input type="text" class="form-control"  name="groceries" placeholder="">
                        </div>
                            <div class="form-group">
                                <label for="">Misc.</label>
                                <input type="text" class="form-control"  name="misc" placeholder="">
                            </div>

                            <br>
                            <form class="panel-title">
                                <h3 class="panel-title"><strong>BUDGET</strong></h3>
                                <br>
                                <div class="form-group">
                                    <label for="">Monthly Salary</label>
                                    <input type="text" class="form-control"  name="earnings" placeholder="">
                                </div>
                        <div class="text-right">
                            <button type="submit" class="btn btn-primary btn-md" >Post</button>
                        </div>
                            </form>
                    </form>
                    <br>
                </div>
                    </form>
            </div>
            </div>
    </div>
</div>

<script src="js/add.js" type="text/javascript"></script>



</div>

<!-- Navigation -->
<form action="/logout" class="logout" method="GET">
    <button type="submit" class="btn bg-danger btn-lg"> Log Out</button>
</form>


